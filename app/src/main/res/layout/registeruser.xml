<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/imvbackRigis"
                android:background="@color/bg"
                android:src="@drawable/icon_back"
                android:layout_width="40dp"
                android:layout_height="35dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="会員登録"
                android:textSize="20sp"
                android:textColor="#030303"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btnLuuRegis"
                android:textColor="@color/color_dots"
                android:text="完了"
                android:gravity="center"
                android:background="#FFA6A6"
                android:layout_width="60dp"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
    android:layout_weight="1.5"
        android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="0dp">
        <ImageView
            android:id="@+id/imvAvatar"
            android:src="@drawable/icon_no_image"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:text="ユーザー名"
                android:textColor="@color/color_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edtNhaptenRegis"
                android:background="@drawable/edittext"

                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:text="パスワード ( 06/11/1997 )"
                android:textColor="@color/color_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edtNhapngaysinhRegis"
                android:background="@drawable/edittext"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="子供の人数"
                    android:textColor="@color/color_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:paddingLeft="15dp"
                    android:id="@+id/edtsoluongRegis"
                    android:background="@drawable/edittext"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_weight="1"

                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="アドレス"
                    android:textColor="@color/color_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/edtDiachiRegis"
                    android:paddingLeft="15dp"
                    android:background="@drawable/edittext"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:text="プロフィール"
                android:textColor="@color/color_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edtThongtinchungRegis"
                android:background="@drawable/edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>