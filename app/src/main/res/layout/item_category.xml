<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txttitle"
            android:gravity="center"
            android:text="Tin hót"
            android:textColor="#47ea65"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/txtThreadnew"
            android:text="Nữ tài xế lái BMW gây tai nạn kinh hoàng: Thảm họa từ chiếc giày cao gót? "
            android:textColor="#284d6b"
            android:textSize="20sp"
            android:textStyle="bold"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/txtContent"
            android:text="Nữ tài xế lái thừa nhận có uống rượu nhưng vẫn còn tỉnh táo và vụ tai nạn xảy ra từ chiếc giày cao gót?"
            android:textColor="#284d6b"
            android:lines="2"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtDate"
            android:gravity="center"
            android:text="11:22 AM 10/23/2018"
            android:textColor="#284d6b"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </LinearLayout>

</LinearLayout>